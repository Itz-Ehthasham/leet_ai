{
    "manifest_version": 1,
    "name": "LeetCode AI",
    "Description": "Enhance your LeetCode experience with AI-powered coding assistance, problem explanations, and personalized learning paths.",
    "version": "1.0.0",
    "permissions": ["storage", "activeTab", "scripting"],
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "16": "public/icons/icon16.png",
            "48": "public/icons/icon48.png",
            "128": "public/icons/icon128.png"
        },
        "content_scripts": [
            {
                "matches": ["https://leetcode.com/*"],
                "js": ["contentScript.js"]
            }
        ],
        "background": {
            "service_worker": "background.js"
        }
    }

    
 


}